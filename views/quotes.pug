extends boilerplate
block content
    //- the main container
    .secondContainer
        //- form
        .form 
            .addBtn ADD 
            .form__add
                form(action='/dbb', method='POST')
                    input(type='text', name='name', placeholder='Title')
                    br
                    input(type='text', name='description', placeholder='Description')
                    br
                    input(type='text', name='direction', placeholder='Details')
                    br
                    input(type='submit', value='Add')

        //- looping through the database
        each i in howto
            .secondContainer__items
                h3.secondContainer__items--header #{i.name} 
                .secondContainer__items--subcontent
                    p.secondContainer__items--description #{i.description}
                    p.secondContainer__items--direction  #{i.direction}  
                    //- delete 
                    form.delete(action=`/dbb/${i.id}?_method=DELETE`, method='POST')
                        input.deleteBtn(type='submit', value='Delete')
                    //- update
                    .add
                        form(action=`/dbb/${i.id}?_method=PUT`, method='POST')
                            input(type='text', name='name', value=`${i.name}`)
                            br
                            input(type='text', name='description', value=`${i.description}`)
                            br
                            input(type='text', name='direction', value=`${i.direction}`)
                            br
                            input(type='submit', value='Edit')


    include footer.pug